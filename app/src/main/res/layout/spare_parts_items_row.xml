    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginLeft="@dimen/_12dp"
        android:layout_marginRight="@dimen/_12dp"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".49"
            app:cardCornerRadius="@dimen/_5dp"
            app:cardBackgroundColor="#05B3B9">
            <LinearLayout
                android:id="@+id/frontDefectiveImageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_12dp"
                android:paddingTop="@dimen/_5dp"
                android:gravity="center"
                android:paddingBottom="@dimen/_5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:textSize="16dp"
                    android:text="Defective Front Part"/>
                <ImageView
                    android:id="@+id/frontDefectivePartImage"
                    android:layout_width="@dimen/_50dp"
                    android:layout_height="@dimen/_50dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:background="@drawable/sparepic"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".49"
            app:cardCornerRadius="@dimen/_5dp"
            android:layout_marginLeft="@dimen/_10dp"
            app:cardBackgroundColor="#05B3B9">
            <LinearLayout
                android:id="@+id/backDefectiveImageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_12dp"
                android:paddingTop="@dimen/_5dp"
                android:gravity="center"
                android:paddingBottom="@dimen/_5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Defective Back Part"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:textSize="16dp"
                    android:textColor="#FFFFFF"/>
                <ImageView
                    android:id="@+id/backDefectivePartImage"
                    android:layout_width="@dimen/_50dp"
                    android:layout_height="@dimen/_50dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:background="@drawable/sparepic"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>