    </LinearLayout>
    <LinearLayout
        android:id="@+id/partTypeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_drawable"
        android:layout_marginTop="@dimen/_10dp"
        android:minHeight="@dimen/_40dp"
        android:layout_marginLeft="@dimen/_12dp"
        android:layout_marginRight="@dimen/_12dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/partLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/partType"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:gravity="center_vertical"
            android:textColor="#38445E"
            android:layout_marginLeft="@dimen/_5dp"
            android:paddingLeft="@dimen/_10dp"
            android:text="Part Type"/>
        <TextView
            android:id="@+id/selectPartType"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:background="#F2F2F2"
            android:paddingLeft="@dimen/_10dp"
            android:gravity="center"
            android:textColor="#8C8C8C"
            android:textSize="@dimen/_15dp"
            android:hint="Select Part Type"/>
        <com.around.engineerbuddy.component.BMAFontViewField
            android:id="@+id/partTypeDropDownIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/icon_sort_down"
            android:background="#FFFFFF"
            android:layout_weight=".1"
            android:textColor="#2A3F54"
            android:textSize="@dimen/_25dp" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/partNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_drawable"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginLeft="@dimen/_12dp"
        android:layout_marginRight="@dimen/_12dp"
        android:minHeight="@dimen/_40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/partName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:gravity="center_vertical"
            android:textColor="#38445E"
            android:layout_marginLeft="@dimen/_5dp"
            android:paddingLeft="@dimen/_10dp"
            android:text="Part Name"/>
        <EditText
            android:id="@+id/selectPartName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:background="#F2F2F2"
            android:paddingLeft="@dimen/_10dp"
            android:gravity="center"
            android:textColor="#8C8C8C"
            android:textSize="@dimen/_15dp"
            android:hint="Select Part Name"/>
        <com.around.engineerbuddy.component.BMAFontViewField
            android:id="@+id/partNameDropDownIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/icon_sort_down"
            android:background="#FFFFFF"
            android:layout_weight=".1"
            android:textColor="#2A3F54"
            android:textSize="@dimen/_25dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/quantityLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_drawable"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginLeft="@dimen/_12dp"
        android:layout_marginRight="@dimen/_12dp"
        android:minHeight="@dimen/_40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/quantity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:gravity="center_vertical"
            android:textColor="#38445E"
            android:layout_marginLeft="@dimen/_5dp"
            android:paddingLeft="@dimen/_10dp"
            android:text="Part No."/>
        <TextView
            android:id="@+id/selectQuantity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:background="#F2F2F2"
            android:paddingLeft="@dimen/_10dp"
            android:gravity="center"
            android:textColor="#8C8C8C"
            android:textSize="@dimen/_15dp"
            android:text=""/>
        <!--<engineerbuddyddy.component.BMAFontViewField-->
            <!--android:id="@+id/quantityDateropDownIcon"-->
