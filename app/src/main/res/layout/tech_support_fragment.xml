<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/noDataToDisplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/_20dp"
        android:text="No data to display"
        android:visibility="gone"/>
    <android.support.v7.widget.CardView
        android:id="@+id/tech_support_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_2dp"
        android:visibility="gone"
        android:paddingBottom="@dimen/_10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:minHeight="@dimen/_90dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/_55dp"
                android:layout_height="@dimen/_55dp"
                android:background="@drawable/person"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:minHeight="@dimen/_75dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/techSupportName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_20dp"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:textColor="#505050"
                    android:text="Toll Free Number"/>
                <TextView
                    android:id="@+id/techSupportNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textSize="@dimen/_16dp"
                    android:textColor="#8C8C8C"
                    android:text="1234567890"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:id="@+id/techSupportLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"></LinearLayout>

</LinearLayout>