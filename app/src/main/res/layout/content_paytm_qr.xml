<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.around.technician.PaytmQrActivity"
    tools:showIn="@layout/activity_paytm_qr">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/bannerrela"
            android:padding="?attr/dialogPreferredPadding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/banner"
                android:layout_width="wrap_content"
                android:layout_height="175dp"
                android:src="@drawable/paytmcashback" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/bannerrela"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:padding="?attr/dialogPreferredPadding"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/qrImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                />
            <ProgressBar
                android:id="@+id/progressBar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:background="#fff" />

            <Button

                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_button_height"
                android:layout_marginTop="@dimen/submit_button"
                android:background="@color/colorPrimary"
                android:text="@string/proceed"
                android:onClick="submitProcess"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/text_size" />
        </RelativeLayout>

    </RelativeLayout>



</android.support.constraint.ConstraintLayout>
