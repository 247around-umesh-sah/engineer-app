<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.around.technician.CompleteBookingActivity"
    tools:showIn="@layout/app_bar_complete_booking">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/input_padding"
        android:paddingRight="@dimen/input_padding"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/input_padding">

                <TextView
                    android:id="@+id/bookingID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:gravity="start"
                    android:text=""
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/services"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="end"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size" />

                <View
                    android:id="@+id/border"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_below="@+id/bookingID"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorPrimary" />

                <ImageView
                    android:id="@+id/customerNameImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/border"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_user" />

                <TextView
                    android:id="@+id/customerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/border"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="23dp"
                    android:layout_toRightOf="@+id/customerNameImage"
                    android:text=""
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/amountDueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/customerNameImage"
                    android:layout_marginTop="15dp"
                    android:text="Amount Due: "
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/amountDue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/customerNameImage"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/amountDueText"
                    android:textSize="@dimen/text_size" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/appliance_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardview"
            android:layout_marginTop="@dimen/input_padding">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/amountDueInputText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appliance_list"
            android:layout_marginTop="23dp"
            android:text="Amount Paid"
            android:textSize="@dimen/text_size" />

        <EditText
            android:id="@+id/amountPaidInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appliance_list"
            android:layout_marginLeft="@dimen/input_padding"
            android:layout_marginTop="@dimen/input_padding"
            android:layout_toRightOf="@+id/amountDueInputText"
            android:hint="Customer Paid Amount"
            android:inputType="numberDecimal"
            android:textSize="@dimen/text_size" />

        <Button
            android:id="@+id/signature"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_button_height"
            android:layout_below="@+id/amountPaidInput"
            android:layout_marginTop="12dp"
            android:background="@color/orange"
            android:text="@string/add_signature"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size" />

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_button_height"
            android:layout_below="@+id/signature"
            android:layout_marginTop="12dp"
            android:background="@color/colorPrimary"
            android:onClick="submitProcess"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size" />


    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
