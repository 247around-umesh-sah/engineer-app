<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#F7F7F7"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.around.technician.CompleteBookingActivity"
    tools:showIn="@layout/app_bar_complete_booking">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/input_padding"
        android:paddingRight="@dimen/input_padding"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/appliance_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardview"
            android:layout_marginTop="@dimen/input_padding">

        </android.support.v7.widget.RecyclerView>

        <Button
            android:visibility="gone"
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_button_height"
            android:layout_below="@+id/appliance_list"
            android:layout_marginTop="@dimen/submit_button"
            android:background="@color/colorPrimary"
            android:onClick="submitProcess"
            android:text="@string/procceed"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size" />


    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
