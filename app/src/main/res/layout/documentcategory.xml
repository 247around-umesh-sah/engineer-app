<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/header_gradient_color"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/_20dp"
        android:text="No data to display"/>
    <android.support.v7.widget.CardView
        android:id="@+id/documentCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:minHeight="@dimen/_130dp"
            android:background="@drawable/card_gradient_color"
            android:gravity="center">
            <ImageView
                android:id="@+id/documentImage"
                android:layout_width="@dimen/_45dp"
                android:layout_height="@dimen/_50dp" />
            <TextView
                android:id="@+id/documentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18dp"
                android:textColor="#505050"
                android:layout_marginTop="@dimen/_5dp"
                android:fontFamily="@font/sourcesanspro_regular"
                android:text="DocumentName"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <com.around.engineerbuddy.component.BMACardView
        android:id="@+id/videoCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:paddingBottom="@dimen/_2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:minHeight="@dimen/_130dp"
            android:background="@drawable/card_gradient_color"
            android:gravity="center">
            <ImageView
                android:id="@+id/videoImage"
                android:layout_width="@dimen/_45dp"
                android:layout_height="@dimen/_50dp" />
            <TextView
                android:id="@+id/videoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18dp"
                android:textColor="#505050"
                android:layout_marginTop="@dimen/_5dp"
                android:fontFamily="@font/sourcesanspro_regular"
                android:text="DocumentName"/>
        </LinearLayout>
    </com.around.engineerbuddy.component.BMACardView>
    <com.around.engineerbuddy.component.BMACardView
        android:layout_marginTop="@dimen/_5dp"
        android:id="@+id/softwareCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:minHeight="@dimen/_130dp"
            android:background="@drawable/card_gradient_color"
            android:gravity="center">
            <ImageView
                android:id="@+id/softwareImage"
                android:layout_width="@dimen/_45dp"
                android:layout_height="@dimen/_50dp"
                />
            <TextView
                android:id="@+id/softwareName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18dp"
                android:textColor="#505050"
                android:layout_marginTop="@dimen/_5dp"
                android:fontFamily="@font/sourcesanspro_regular"
                android:text="DocumentName"/>
        </LinearLayout>
    </com.around.engineerbuddy.component.BMACardView>
</LinearLayout>