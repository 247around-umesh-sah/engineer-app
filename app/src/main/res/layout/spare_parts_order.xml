            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15dp"
            android:orientation="vertical">

        </LinearLayout>
        <TextView
            android:id="@+id/problemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#383838"
            android:fontFamily="@font/sourcesanspro_regular"
            android:textSize="@dimen/_14dp"
            android:layout_marginTop="@dimen/_10dp"
            android:visibility="gone"
            android:text="Problem Description"/>
        <com.around.engineerbuddy.component.BMACardView
            android:id="@+id/ProblemdescriptionCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_12dp"
            android:layout_marginRight="@dimen/_12dp"
            android:layout_marginTop="@dimen/_15dp"
            android:visibility="visible"
            >
            <EditText
                android:id="@+id/Problemdescriptionedittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8dp"
                android:background="@color/transparentWhite"
                android:gravity="top|left"
                android:minHeight="@dimen/_120dp"
                android:hint="Problem Description"
                android:paddingLeft="@dimen/_3dp" />
        </com.around.engineerbuddy.component.BMACardView>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/footer"></include>

</LinearLayout>