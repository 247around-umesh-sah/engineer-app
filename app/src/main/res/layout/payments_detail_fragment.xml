<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/card_gradient_color"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="@dimen/_40dp"
                android:gravity="center_vertical"
                android:background="@drawable/rect_drawable"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/brandView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:paddingLeft="@dimen/_10dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:background="#FFFFFF"
                    android:textColor="#38445E"
                    android:text="Amount Due on Customer"/>
                <TextView
                    android:id="@+id/brand"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".4"
                    android:paddingLeft="@dimen/_10dp"
                    android:textColor="#38445E"
                    android:background="#F2F2F2"
                    android:gravity="center"
                    android:textSize="@dimen/_15dp"
                    android:text="₹ 00"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_40dp"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/rect_drawable"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/productview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:paddingLeft="@dimen/_10dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:textColor="#38445E"
                    android:text="Basic Charges Taken"/>
                <EditText
                    android:id="@+id/product"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".4"
                    android:background="#F2F2F2"
                    android:paddingLeft="@dimen/_10dp"
                    android:textColor="#38445E"
                    android:gravity="center"
                    android:textSize="@dimen/_15dp"
                   android:hint="Enter Amount"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_drawable"
                android:layout_marginTop="@dimen/_10dp"
                android:minHeight="@dimen/_40dp"

                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/categoryView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:paddingLeft="@dimen/_10dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:textColor="#38445E"
                    android:text="Additional Charges Taken"/>
                <EditText
                    android:id="@+id/category"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".4"
                    android:background="#F2F2F2"
                    android:paddingLeft="@dimen/_10dp"
                    android:textColor="#38445E"
                    android:gravity="center"
                    android:textSize="@dimen/_15dp"
                    android:hint="Enter Amount"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_drawable"
                android:layout_marginTop="@dimen/_10dp"
                android:minHeight="@dimen/_40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/capacityView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:paddingLeft="@dimen/_10dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:textColor="#38445E"
                    android:text="Add-ons Service Charges"/>
                <TextView
                    android:id="@+id/capacity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".4"
                    android:background="@drawable/rect_rightside_drawable"
                    android:paddingLeft="@dimen/_10dp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"

                    android:textSize="@dimen/_15dp"
                    android:text="Add Service"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_drawable"
                android:layout_marginTop="@dimen/_10dp"
                android:minHeight="@dimen/_40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/model"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:gravity="center_vertical"
                    android:textColor="#38445E"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:paddingLeft="@dimen/_10dp"
                    android:text="Add-ons Spare Part Cost"/>
                <TextView
                    android:id="@+id/sparePartsCost"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".4"
                    android:paddingLeft="@dimen/_10dp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:background="@drawable/rect_rightside_drawable"
                    android:textSize="@dimen/_15dp"
                    android:text="Select Spare parts"/>
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/tipLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="@dimen/_6dp"
                android:layout_marginTop="@dimen/_30dp"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ask For Tip"
                        android:background="#05B3B9"
                        android:gravity="center"
                        android:padding="@dimen/_5dp"
                        android:textSize="@dimen/_16dp"
                        android:textColor="#FFFFFF"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_10dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight=".33">
                            <com.around.engineerbuddy.component.BMAFontViewField
                                android:id="@+id/firstStarImage"
                                android:layout_width="@dimen/_25dp"
                                android:layout_height="@dimen/_30dp"
                                android:gravity="center"
                                android:layout_marginLeft="@dimen/_5dp"
                                android:textSize="@dimen/_25dp"
                                android:text="@string/star_icon"
                                android:textColor="#F4C914"/>
                            <TextView
                                android:id="@+id/tenAmount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="1"
                                android:fontFamily="@font/sourcesanspro_regular"
                                android:layout_marginLeft="6dp"
                                android:layout_marginRight="6dp"
                                android:textColor="#505050"
                                android:text="₹ 10"
                                android:textStyle="bold"
                                android:textSize="@dimen/_17dp" /></LinearLayout>
                        <View
                            android:layout_width="@dimen/_2dp"
                            android:layout_height="match_parent"
                            android:background="#05B3B9"></View>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight=".33">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <com.around.engineerbuddy.component.BMAFontViewField
                                    android:id="@+id/secondStarImage"
                                    android:layout_width="@dimen/_25dp"
                                    android:layout_height="@dimen/_30dp"
                                    android:gravity="center"
                                    android:layout_marginLeft="@dimen/_5dp"
                                    android:textSize="@dimen/_25dp"
                                    android:text="@string/star_icon"
                                    android:textColor="#F4C914"/>


                                <com.around.engineerbuddy.component.BMAFontViewField
                                    android:layout_width="@dimen/_25dp"
                                    android:layout_height="@dimen/_30dp"
                                    android:gravity="center"
                                    android:layout_marginLeft="@dimen/_5dp"
                                    android:textSize="@dimen/_25dp"
                                    android:text="@string/star_icon"
                                    android:textColor="#F4C914"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/twentyAmount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="1"
                                android:fontFamily="@font/sourcesanspro_regular"
                                android:layout_marginLeft="6dp"
                                android:layout_marginRight="6dp"
                                android:textColor="#505050"
                                android:text="₹ 20"
                                android:textStyle="bold"
                                android:textSize="@dimen/_17dp" /></LinearLayout>
                        <View
                            android:layout_width="@dimen/_2dp"
                            android:layout_height="match_parent"
                            android:background="#05B3B9"></View>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight=".33">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <com.around.engineerbuddy.component.BMAFontViewField
                                    android:id="@+id/thirdstarimage"
                                    android:layout_width="@dimen/_25dp"
                                    android:layout_height="@dimen/_30dp"
                                    android:gravity="center"
                                    android:layout_marginLeft="@dimen/_5dp"
                                    android:textSize="@dimen/_25dp"
                                    android:text="@string/star_icon"
                                    android:textColor="#F4C914"/>
                                <com.around.engineerbuddy.component.BMAFontViewField
                                    android:layout_width="@dimen/_25dp"
                                    android:layout_height="@dimen/_30dp"
                                    android:gravity="center"
                                    android:layout_marginLeft="@dimen/_5dp"
                                    android:textSize="@dimen/_25dp"
                                    android:text="@string/star_icon"
                                    android:textColor="#F4C914"/>
                                <com.around.engineerbuddy.component.BMAFontViewField
                                    android:layout_width="@dimen/_25dp"
                                    android:layout_height="@dimen/_30dp"
                                    android:gravity="center"
                                    android:layout_marginLeft="@dimen/_5dp"
                                    android:textSize="@dimen/_25dp"
                                    android:text="@string/star_icon"
                                    android:textColor="#F4C914"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/thirtyAmount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="1"
                                android:fontFamily="@font/sourcesanspro_regular"
                                android:layout_marginLeft="6dp"
                                android:layout_marginRight="6dp"
                                android:textColor="#505050"
                                android:text="₹ 30"
                                android:textStyle="bold"
                                android:textSize="@dimen/_17dp" /></LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/submitButton"
        android:layout_width="@dimen/_158dp"
        android:layout_height="@dimen/_40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="@dimen/_15dp"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@drawable/submitbutton"
        android:gravity="center"
        android:text="CheckOut"
        android:textAllCaps="false"
        android:fontFamily="@font/sourcesanspro_regular"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_18dp"
        android:textStyle="bold"
        android:visibility="visible" />

</LinearLayout>