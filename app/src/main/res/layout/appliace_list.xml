<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/input_padding">

        <TextView
            android:id="@+id/brandText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand: "
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/input_padding"
            android:layout_toRightOf="@+id/brandText"
            android:text="Videotex"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/categoryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/brandText"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="Category: "
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/brandText"
            android:layout_marginLeft="@dimen/input_padding"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@+id/categoryText"
            android:text="TV-LED"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/capacityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/categoryText"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="Capacity: "
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/categoryText"
            android:layout_marginLeft="@dimen/input_padding"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@+id/capacityText"
            android:text="18 Inch"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/broken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/capacityText"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="Appliance Broken "
            android:textSize="@dimen/text_size" />

        <RadioGroup
            android:id="@+id/brokenRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/capacityText"
            android:layout_marginLeft="@dimen/input_padding"
            android:layout_marginTop="@dimen/input_padding"
            android:layout_toRightOf="@+id/broken"
            android:orientation="horizontal"
            android:weightSum="2">

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="No" />

        </RadioGroup>

        <View
            android:id="@+id/border2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/brokenRadio"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/child_recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/border2"
            android:layout_marginTop="@dimen/input_padding">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/sN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/child_recyclerview"
            android:layout_marginTop="23dp"
            android:text="Serial No"
            android:textSize="@dimen/text_size" />

        <EditText
            android:id="@+id/serialNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/child_recyclerview"
            android:layout_marginLeft="@dimen/input_padding"
            android:layout_marginTop="@dimen/input_padding"
            android:layout_toRightOf="@+id/sN"
            android:hint="Enter Serial No"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/sNPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sN"
            android:layout_marginTop="27dp"
            android:text="Serial No Pic"
            android:textSize="@dimen/text_size" />

        <ImageView
            android:id="@+id/sNCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sN"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/sNPic"
            android:src="@drawable/ic_action_camera" />

    </RelativeLayout>
</android.support.v7.widget.CardView>