<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/_20dp"
    android:layout_marginTop="@dimen/_10dp"
    android:layout_marginRight="@dimen/_20dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/brandLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginRight="@dimen/_12dp"
        android:background="@drawable/rect_drawable"
        android:minHeight="@dimen/_40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/brandView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_weight=".3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_10dp"
            android:text="Brand"
            android:textColor="#38445E" />

        <LinearLayout
            android:id="@+id/selectBrandLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/selectBrand"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:background="#F2F2F2"
                android:gravity="center"
                android:paddingLeft="@dimen/_10dp"
                android:textColor="#8C8C8C"
                android:hint="Select Brand"
                android:textSize="@dimen/_15dp" />

            <com.around.engineerbuddy.component.BMAFontViewField
                android:id="@+id/brandDropDownIcon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="@string/icon_sort_down"
                android:textColor="#2A3F54"
                android:textSize="@dimen/_25dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/productLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginRight="@dimen/_12dp"
        android:background="@drawable/rect_drawable"
        android:minHeight="@dimen/_40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/productView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_weight=".3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_10dp"
            android:text="Product"
            android:textColor="#38445E" />

        <LinearLayout
            android:id="@+id/selectProductLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/selectProduct"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:background="#F2F2F2"
                android:gravity="center"
                android:paddingLeft="@dimen/_10dp"
                android:textColor="#8C8C8C"
                android:hint="Select Product"
                android:textSize="@dimen/_15dp" />

            <com.around.engineerbuddy.component.BMAFontViewField
                android:id="@+id/ProductDropDownIcon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="@string/icon_sort_down"
                android:textColor="#2A3F54"
                android:textSize="@dimen/_25dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/modelLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginRight="@dimen/_12dp"
        android:background="@drawable/rect_drawable"
        android:minHeight="@dimen/_40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/modelView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_weight=".3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_10dp"
            android:text="Model"
            android:textColor="#38445E" />

        <LinearLayout
            android:id="@+id/selectModelLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/selectModel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:background="#F2F2F2"
                android:gravity="center"
                android:paddingLeft="@dimen/_10dp"
                android:textColor="#8C8C8C"
                android:hint="Select Model"
                android:textSize="@dimen/_15dp" />

            <com.around.engineerbuddy.component.BMAFontViewField
                android:id="@+id/modelDropDownIcon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="@string/icon_sort_down"
                android:textColor="#2A3F54"
                android:textSize="@dimen/_25dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/partTypeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginRight="@dimen/_12dp"
        android:background="@drawable/rect_drawable"
        android:minHeight="@dimen/_40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/partTypeView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_weight=".3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_10dp"
            android:text="Part Type"
            android:textColor="#38445E" />

        <LinearLayout
            android:id="@+id/selectPartTypeLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/selectpartType"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:background="#F2F2F2"
                android:gravity="center"
                android:paddingLeft="@dimen/_10dp"
                android:textColor="#8C8C8C"
                android:hint="Select Part Type"
                android:textSize="@dimen/_15dp" />

            <com.around.engineerbuddy.component.BMAFontViewField
                android:id="@+id/partTypeDropDownIcon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="@string/icon_sort_down"
                android:textColor="#2A3F54"
                android:textSize="@dimen/_25dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sparePartLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginRight="@dimen/_12dp"
        android:background="@drawable/rect_drawable"
        android:minHeight="@dimen/_40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sparePartView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_weight=".3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_10dp"
            android:text="Part Name"
            android:textColor="#38445E" />

        <LinearLayout
            android:id="@+id/selectsparePartLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/selectsparePart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:background="#F2F2F2"
                android:gravity="center"
                android:paddingLeft="@dimen/_10dp"
                android:textColor="#8C8C8C"
                android:hint="Select Part Name"
                android:textSize="@dimen/_15dp" />

            <com.around.engineerbuddy.component.BMAFontViewField
                android:id="@+id/sparePartDropDownIcon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="@string/icon_sort_down"
                android:textColor="#2A3F54"
                android:textSize="@dimen/_25dp" />
        </LinearLayout>
    </LinearLayout>
    <com.around.engineerbuddy.component.BMACardView
        android:id="@+id/ProblemdescriptionCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10dp"
        android:layout_marginRight="@dimen/_5dp"
        android:layout_marginLeft="@dimen/_5dp"
        android:gravity="center_vertical"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/partNumberlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center_vertical"
            android:text="Part Number"
            android:textColor="#38445E"
            android:textSize="@dimen/_18dp" />

        <TextView
            android:id="@+id/partNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_10dp"
            android:textColor="#38445E"
            android:textSize="@dimen/_18dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/partPricelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        android:orientation="horizontal">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".6"
        android:gravity="center_vertical"
        android:text="Customer Price "
        android:textColor="#38445E"
        android:textSize="@dimen/_18dp" />
        <TextView
            android:id="@+id/partPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_10dp"
            android:layout_weight=".4"
            android:textColor="#38445E"
            android:textSize="@dimen/_16dp" />
        <TextView
            android:id="@+id/gstpartPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#38445E"
            android:text="(with GST)"
            android:visibility="gone"
            android:textSize="@dimen/_10dp" />
    </LinearLayout>
    </LinearLayout>
    </com.around.engineerbuddy.component.BMACardView>


</LinearLayout>