<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/_20dp"
    android:layout_marginRight="@dimen/_20dp"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/_7dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:paddingLeft="@dimen/_10dp"
            android:paddingRight="@dimen/_10dp"
            android:minHeight="@dimen/_40dp"
            android:orientation="horizontal">
            <com.around.engineerbuddy.component.BMAFontViewField
                android:id="@+id/timeicon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/icon_clock"
                android:gravity="center"
                android:layout_weight=".1"
                android:textColor="#2A3F54"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".45"
                android:gravity="center_vertical"
                android:text="New Time Slot"/>
            <TextView
                android:id="@+id/timeSlot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".45"
                android:textColor="#8C8C8C"
                android:paddingLeft="@dimen/_10dp"
                android:gravity="center_vertical|right"
                android:text="10am - 01pm"/>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minHeight="@dimen/_100dp"
                android:weightSum="3">
                <TextView
                    android:id="@+id/morningTimeSlot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#F2F2F2"
                    android:gravity="center"
                    android:textSize="@dimen/_18dp"
                    android:textStyle="bold"
                    android:text="10am - 01pm"/>
                <TextView
                    android:id="@+id/noonTimeSlot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:background="#F2F2F2"
                    android:gravity="center"
                    android:textSize="@dimen/_18dp"
                    android:textStyle="bold"
                    android:text="01pm - 04pm"/>
                <TextView
                    android:id="@+id/eveningTimeSlot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:background="#F2F2F2"
                    android:gravity="center"
                    android:textSize="@dimen/_18dp"
                    android:textStyle="bold"
                    android:text="04pm - 07pm"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        app:cardCornerRadius="@dimen/_7dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:paddingLeft="@dimen/_10dp"
            android:paddingRight="@dimen/_10dp"
            android:minHeight="@dimen/_40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/appointmentReason"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".45"
                android:gravity="center_vertical"
                android:text="Appointment Reason"/>
            <LinearLayout
                android:id="@+id/selectReasonlayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight=".47">
            <TextView
                android:id="@+id/selectAppointmentReason"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".47"
                android:background="#F2F2F2"
                android:paddingLeft="@dimen/_10dp"
                android:gravity="center_vertical"
                android:textColor="#8C8C8C"
                android:hint="Select Reason"/>
            <com.around.engineerbuddy.component.BMAFontViewField
                android:id="@+id/appointmentDropDownIcon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="@string/icon_sort_down"
                android:layout_weight=".08"
                android:textColor="#2A3F54"
                android:textSize="@dimen/_25dp" />
            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        app:cardCornerRadius="@dimen/_7dp">
        <LinearLayout
            android:id="@+id/dateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"

            android:paddingLeft="@dimen/_10dp"
            android:paddingRight="@dimen/_10dp"
            android:minHeight="@dimen/_40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <com.around.engineerbuddy.component.BMAFontViewField
                android:id="@+id/calenderIcon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/icon_calendar"
                android:gravity="center"
                android:layout_weight=".1"
                android:textColor="#2A3F54"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/bookingDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".45"
                android:gravity="center_vertical"
                android:text="New Booking date"/>
            <TextView
                android:id="@+id/selectedDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".45"
                android:paddingLeft="@dimen/_10dp"
                android:textColor="#8C8C8C"
                android:gravity="center_vertical|right"
                android:hint="Select Date"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <com.around.engineerbuddy.component.BMACardView
        android:id="@+id/ProblemdescriptionCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        >
        <EditText
            android:id="@+id/Problemdescriptionedittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8dp"
            android:background="@color/transparentWhite"
            android:gravity="top|left"
            android:minHeight="@dimen/_120dp"
            android:hint="Enter Remarks"
            android:paddingLeft="3dp" />
    </com.around.engineerbuddy.component.BMACardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_weight="1">
    <Button
        android:id="@+id/submitButton"
        android:layout_width="@dimen/_158dp"
        android:layout_height="@dimen/_40dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginRight="@dimen/_15dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/blue_submit_button"
        android:fontFamily="@font/sourcesanspro_regular"
        android:gravity="center"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_18dp"
        android:textStyle="bold"
        android:visibility="visible" />
    </LinearLayout>

</LinearLayout>