<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hubworks="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/card_gradient_color"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/_5dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:isScrollContainer="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          >


            <LinearLayout
                android:id="@+id/imageNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_40dp"
                android:orientation="vertical">


                    <ImageView
                        android:id="@+id/profileImg"
                        android:layout_width="@dimen/_110dp"
                        android:layout_height="@dimen/_110dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/person" />
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_toRightOf="@id/profileImg"-->
                    <!--android:text="5000"/>-->
               <!---->

                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="#383838"
                    android:textSize="@dimen/_20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Service Engineer"
                    android:layout_marginTop="10dp"
                    android:textColor="#8C8C8C"
                    android:textSize="@dimen/_21dp"/>

            </LinearLayout>

            <com.around.engineerbuddy.component.BMACardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@color/light_steelGray_color"
                hubworks:cardCornerRadius="@dimen/_3dp"
                android:layout_below="@id/imageNameLayout"
                hubworks:cardUseCompatPadding="true"
                >
                <LinearLayout
                    android:id="@+id/profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/serviceCenterLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10dp"
                            android:textSize="@dimen/_16dp"
                            android:layout_weight=".35"
                            android:text="Service Center    "/>
                        <TextView
                            android:id="@+id/servicecenterName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:padding="@dimen/_10dp"
                            android:layout_weight=".65"
                            android:textSize="@dimen/_16dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/cityLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10dp"
                            android:textSize="@dimen/_16dp"
                            android:layout_weight=".35"
                            android:text="City   "/>
                        <TextView
                            android:id="@+id/cityName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:padding="@dimen/_10dp"
                            android:layout_weight=".65"
                            android:textSize="@dimen/_16dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10dp"
                            android:textSize="@dimen/_16dp"
                            android:layout_weight=".35"
                            android:text="Product    "/>
                        <TextView
                            android:id="@+id/appliance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:padding="@dimen/_10dp"
                            android:layout_weight=".65"
                            android:textSize="@dimen/_16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/adharLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/idType"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10dp"
                            android:layout_weight=".35"
                            android:textSize="@dimen/_16dp"
                      />
                        <TextView
                            android:id="@+id/idNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:layout_weight=".65"
                            android:padding="@dimen/_10dp"
                            android:textSize="@dimen/_16dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/otherIdLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".35"
                            android:padding="@dimen/_10dp"
                            android:textSize="@dimen/_16dp" />
                        <TextView
                            android:id="@+id/otherID"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:layout_weight=".65"
                            android:padding="@dimen/_10dp"
                            android:textSize="@dimen/_16dp"
                            android:text=""/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/mobileNumberLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10dp"
                            android:layout_weight=".35"
                            android:textSize="@dimen/_16dp"
                            android:text="Mobile"/>
                        <TextView
                            android:id="@+id/mobile"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10dp"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:layout_weight=".65"
                            android:textSize="@dimen/_16dp" />
                    </LinearLayout>


                </LinearLayout>
            </com.around.engineerbuddy.component.BMACardView>




        </RelativeLayout>
    </ScrollView>



        <include layout="@layout/footer"
            android:visibility="gone"/>

</LinearLayout>